@model Forum.Web.Models.Post.PostsAllViewModel
@{
    ViewData["Title"] = "Topics";
}

<div class="container">
    <nav class="tt-topic-list" style="word-break: break-word;">

        @if (Model.Posts.Any())
        {
            <div class="tt-list-header">
                <div class="tt-col-topic">Topic</div>
                <div class="tt-col-author">Author</div>
                <div class="tt-col-value">Replies</div>
            </div>

            @foreach (var post in Model.Posts)
            {
                <div class="tt-item">
                    <div class="tt-col-description">
                        <h6 class="tt-title">
                            <a asp-area=""
                               asp-controller="Post"
                               asp-action="Details"
                               asp-route-id="@post.Id">                               
                                @post.Title
                            </a>
                        </h6>
                    </div>
                    <div class="tt-col-author">@post.AuthorName</div>
                    <div class="tt-col-value">@post.RepliesCount</div>
                </div>
            }

            @if (Model.TotalPages > 0)
            {
                <div class="text-center">
                    <nav>
                        <ul class="pagination">
                            <li>
                                <a asp-area=""
                                   asp-controller="Post"
                                   asp-action="Index"
                                   asp-route-page="@Model.PreviousPage">
                                    &laquo;
                                </a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                var active = i == Model.PageIndex ? "active" : string.Empty;
                                <li>
                                    <a class="@active"
                                       asp-area=""
                                       asp-controller="Post"
                                       asp-action="Index"
                                       asp-route-page="@i">
                                        @i
                                    </a>
                                </li>
                            }
                            <li>
                                <a asp-area=""
                                   asp-controller="Post"
                                   asp-action="Index"
                                   asp-route-page="@Model.NextPage">
                                    &raquo;
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="tt-layout-404">
                <h6 class="tt-title">No posts found</h6>
            </div>
        }

    </nav>
</div>